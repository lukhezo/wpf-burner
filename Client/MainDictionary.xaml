<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:vw="clr-namespace:iDesign.Media.Burner.Views;assembly=iDesign.Media.Burner"
    xmlns:vm="clr-namespace:iDesign.Media.Burner.ViewModels;assembly=iDesign.Media.Burner">

    <!-- 
  This template applies an AllCustomersViewMediaView to an instance 
  of the MediaViewModel class shown in the main window.
  -->
    <DataTemplate DataType="{x:Type vm:MediaViewModel}">
        <vw:MediaView />
    </DataTemplate>

</ResourceDictionary>